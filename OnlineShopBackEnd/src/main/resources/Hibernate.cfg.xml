<hibernate-configuration>
<session-factory>
<property name="hbm2ddl.auto">update</property>
<property name="hiberate.dialect">org.hibernate.dialect.H2Dialect</property>
<property name="hibernate.connection.driver_class">org.h2.Driver</property>
<property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/onlineshop</property>
<property name="hibernate.connection.username">sa</property>
<property name="hibernate.connection.password"></property>

<!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

<mapping class="com.myproject.onlineshop.model.Category"></mapping>
<mapping class="com.myproject.onlineshop.model.Product"></mapping>
<mapping class="com.myproject.onlineshop.model.Supplier"></mapping>
</session-factory>
</hibernate-configuration>